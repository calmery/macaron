{
  "build": {
    "appId": "me.calmery.macaron",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "build",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "icon.icns",
      "target": "zip"
    },
    "productName": "Macaron",
    "publish": null
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@ionic/core": "^4.9.1",
    "serve-handler": "6.1.1"
  },
  "devDependencies": {
    "@types/autoprefixer": "9.6.1",
    "@types/copy-webpack-plugin": "5.0.0",
    "@types/html-webpack-plugin": "3.2.1",
    "@types/jest": "24.0.18",
    "@types/mini-css-extract-plugin": "0.8.0",
    "@types/node": "12.7.5",
    "@types/optimize-css-assets-webpack-plugin": "5.0.0",
    "@types/script-ext-html-webpack-plugin": "2.1.1",
    "@types/serve-handler": "6.1.0",
    "@types/uglifyjs-webpack-plugin": "1.1.0",
    "@types/webpack-merge": "4.1.5",
    "@typescript-eslint/eslint-plugin": "2.3.0",
    "@typescript-eslint/parser": "2.3.0",
    "autoprefixer": "9.6.1",
    "commitizen": "4.0.3",
    "copy-webpack-plugin": "5.0.4",
    "css-loader": "3.2.0",
    "cz-conventional-changelog": "3.0.2",
    "electron": "6.0.10",
    "electron-builder": "21.2.0",
    "elm": "0.19.0",
    "elm-format": "0.8.2",
    "elm-test": "0.19.0",
    "elm-webpack-loader": "6.0.0",
    "eslint": "6.4.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-prettier": "3.1.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "3.0.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "mini-css-extract-plugin": "0.8.0",
    "node-sass": "4.12.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss-loader": "3.0.0",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "sass-loader": "8.0.0",
    "script-ext-html-webpack-plugin": "2.1.4",
    "style-loader": "1.0.0",
    "ts-jest": "24.1.0",
    "ts-loader": "6.1.1",
    "ts-node": "8.4.1",
    "typescript": "3.6.3",
    "uglifyjs-webpack-plugin": "2.2.0",
    "webpack": "4.40.2",
    "webpack-cli": "3.3.9",
    "webpack-dev-server": "3.8.1",
    "webpack-manifest-plugin": "2.0.4",
    "webpack-merge": "4.2.2",
    "write-file-webpack-plugin": "4.5.1"
  },
  "engine": {
    "node": "10.16.3",
    "npm": "6.11.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "!src/**/*.d.ts",
      "src/**/*.ts"
    ],
    "moduleNameMapper": {
      "\\.elm$": "<rootDir>/mocks/elm.ts",
      "\\.scss$": "identity-obj-proxy"
    },
    "roots": [
      "<rootDir>/tests"
    ],
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "lint-staged": {
    "**/*.elm": [
      "git add",
      "npm run prettify:elm"
    ],
    "**/*.ts": [
      "git add",
      "npm run prettify:typescript"
    ]
  },
  "main": "build/main",
  "name": "macaron",
  "scripts": {
    "build": "rimraf build && webpack",
    "build:production": "NODE_ENV=production npm run build",
    "clean": "rimraf build && rimraf release",
    "prettify": "npm run prettify:typescript && npm run prettify:elm",
    "prettify:elm": "elm-format --yes .",
    "prettify:typescript": "eslint --fix . --ext .ts",
    "release": "rimraf release && npm run build:production && electron-builder build --mac",
    "start": "webpack --watch",
    "test": "jest --coverage && elm-test"
  },
  "version": "0.0.0"
}
